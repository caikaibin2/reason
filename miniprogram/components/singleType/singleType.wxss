
.singleType{
  width: 100%;
  height: 100rpx;
  display: flex;
  margin-top: 20rpx;
}
.img-box{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  overflow: hidden;
  margin: auto 0;
  margin-left: 20rpx;
}
.img-box .img{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}
.content{
  width: 540rpx;
  height: 100rpx;
  /* margin: auto 0; */
  padding-top: 10rpx;
  margin-left: 20rpx;
  
}
.content .type-price{
  display: flex;
  height: 40rpx;
  line-height: 40rpx;
 
}
.content .type-price .price{
  margin-left: auto;
}
.content .type-price .price.sr{
  color: rgb(0,178,106);
}
.content .type-price .price.zc{
  color: red;
}
.content .progress-count{
  display: flex;
  height: 40rpx;
  line-height: 40rpx;
}
.content .progress-count .count{
  margin-left: auto;
  color: silver;
}
.content .progress-count .progress{
  width: 400rpx;
  height: 40rpx;
  border-radius: 20rpx;
  overflow: hidden;
}
.content .progress-count .progress .zi-progress{
  background-color: #1296db;
  width: 0%;
  height: 40rpx;
  transition: width 0.3;
}
.right {
  width: 40rpx;
  height: 100rpx;
}
.right .right-icon{
  width: 40rpx;
  height: 40rpx;
  /* margin: 0 auto; */
  margin-top: 30rpx;
  margin-left: 20rpx;
}


