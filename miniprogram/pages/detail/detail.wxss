.detail {
  width: 100%;
}
.detail .swiper-box {
  width: 100%;
  height: 500rpx;
}
.detail .swiper-box .swiper {
  width: 100%;
  height: 100%;
}
.detail .swiper-box .swiper .swiper-item {
  width: 100%;
  height: 100%;
}
.detail .swiper-box .swiper .swiper-item image {
  width: 100%;
  height: 500rpx;
}
.detail .swiper-box .noswiper {
  width: 50%;
  margin: 0 auto;
  margin-top: 300rpx;
  height: 100%;
  text-align: center;
  color: silver;
}
.detail .name-like-price {
  margin-top: 40rpx;
}
.detail .name-like-price .name-like {
  display: flex;
  width: 100%;
  max-height: 120rpx;
  line-height: 60rpx;
}
.detail .name-like-price .name-like .name {
  flex: 4;
  padding: 0 40rpx;
  min-height: 80rpx;
  max-height: 160rpx;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.detail .name-like-price .name-like .like {
  flex: 1;
  text-align: center;
}
.detail .name-like-price .name-like .like image {
  width: 60rpx;
  height: 60rpx;
}
.detail .name-like-price .name-like .like text {
  color: silver;
  font-size: 26rpx;
}
.detail .name-like-price .price {
  margin-top: 20rpx;
  margin-left: 40rpx;
  display: flex;
  height: 50rpx;
  line-height: 50rpx;
}
.detail .name-like-price .price .newprice {
  color: red;
}
.detail .name-like-price .price .oldprice {
  text-decoration: line-through;
  margin-left: 40rpx;
  font-size: 24rpx;
}
.detail .commodity-detail .text {
  margin: 40rpx 0 40rpx 40rpx;
}
.detail .option {
  display: flex;
  width: 100%;
  height: 100rpx;
  position: sticky;
  bottom: 0;
  left: 0;
  background-color: white;
}
.detail .option view {
  flex: 1;
  line-height: 100rpx;
  text-align: center;
  font-size: 30rpx;
}
.detail .option .cart {
  position: relative;
}
.detail .option .cart image {
  margin-top: 18rpx;
  width: 64rpx;
  height: 64rpx;
}
.detail .option .cart text {
  line-height: 24rpx;
  padding: 4rpx;
  height: 24rpx;
  background-color: red;
  font-size: 24rpx;
  position: absolute;
  right: 50rpx;
  top: 20rpx;
  color: white;
}
.detail .option .gohome {
  background-color: #ffa500;
  color: white;
}
.detail .option .addcart {
  background-color: #00aaef;
  color: white;
}
.detail .option .pay {
  background-color: #69c3aa;
  color: white;
}
