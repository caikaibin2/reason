.classification {
  width: 100vw;
  height: 100vh;
}
.classification .content {
  width: 100%;
  height: 100%;
  display: flex;
}
.classification .content .potion-box {
  width: 25%;
  height: 100vh;
  background-color: #1afa29;
  color: white;
}
.classification .content .potion-box scroll-view {
  width: 100%;
  height: 100%;
}
.classification .content .potion-box scroll-view view {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
}
.classification .content .potion-box scroll-view .active {
  background-color: white;
  color: #1afa29;
}
.classification .content .potion-content {
  flex: 1;
  width: 75%;
  display: flex;
  flex-wrap: wrap;
  align-content: flex-start;
  overflow: auto;
}
.classification .content .potion-content .potion-item {
  height: 60rpx;
  overflow: auto;
  text-align: center;
  background-color: silver;
  position: sticky;
  top: 0;
  left: 187rpx;
}
.classification .content .potion-content .potion-item .potion {
  display: flex;
  height: 60rpx;
  line-height: 60rpx;
  flex-wrap: nowrap;
  overflow-x: auto;
}
.classification .content .potion-content .potion-item .potion view {
  flex: 1;
  width: 200rpx !important;
  height: 60rpx;
  font-size: 28rpx;
}
.classification .content .potion-content .potion-item .potion .active {
  background-color: #1afa29;
  color: white;
}
.classification .content .potion-content .item {
  width: 33.33%;
  height: 280rpx;
  text-align: center;
}
.classification .content .potion-content .item .img-box {
  width: 100%;
  margin-top: 50rpx;
}
.classification .content .potion-content .item .img-box image {
  width: 150rpx;
  height: 150rpx;
}
.classification .content .potion-content .item text {
  font-size: 28rpx;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
