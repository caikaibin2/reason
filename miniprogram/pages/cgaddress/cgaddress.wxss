.cgaddress .value-list {
  width: 90%;
  margin: 0 auto;
  margin-top: 40rpx;
}
.cgaddress .value-list .name {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  display: flex;
  border-bottom: 1px solid silver;
}
.cgaddress .value-list .name .text {
  flex: 1;
  font-size: 26rpx;
}
.cgaddress .value-list .name .input {
  margin-top: 20rpx;
  flex: 4;
}
.cgaddress .value-list .default {
  display: flex;
  margin-top: 40rpx;
}
.cgaddress .value-list .default .text {
  line-height: 64rpx;
}
.cgaddress .value-list .default .switch {
  margin-left: auto;
  margin-right: 40rpx;
}
.cgaddress .preservation {
  width: 90%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: red;
  color: white;
  text-align: center;
  margin: 0 auto;
  margin-top: 40rpx;
  border-radius: 40rpx;
}
.cgaddress .delete {
  width: 90%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: silver;
  color: white;
  text-align: center;
  margin: 0 auto;
  margin-top: 40rpx;
  border-radius: 40rpx;
}
