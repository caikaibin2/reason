.home {
  background-color: #f5f6f7;
}
.home .search {
  width: 80%;
  margin: 0 auto;
  border: 4rpx solid #1afa29;
  border-radius: 30rpx;
  height: 60rpx;
  margin-bottom: 10rpx;
  position: relative;
}
.home .search .text {
  width: 120rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  position: absolute;
  right: 0rpx;
  top: -40rpx;
  background-color: #1afa29;
  color: white;
  padding: 6rpx 18rpx;
  border-top-right-radius: 24rpx;
  border-bottom-right-radius: 24rpx;
  font-size: 28rpx;
}
.home .search input {
  width: 80%;
  height: 60rpx;
  line-height: 60rpx;
  margin-left: 60rpx;
}
.home .banner .swiper .swiper-item image {
  width: 100vw;
}
.home .classification-box {
  width: 100%;
  margin-top: 20rpx;
  display: flex;
  flex-wrap: wrap;
  background-color: white;
  overflow: hidden;
  transition: height 0.5s;
}
.home .classification-box .classification {
  width: 20%;
  text-align: center;
}
.home .classification-box .classification image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}
.home .classification-box .classification text {
  display: block;
  font-size: 28rpx;
}
.home .down {
  width: 100%;
  height: 60rpx;
  text-align: center;
  background-color: white;
}
.home .down image {
  width: 40rpx;
  height: 40rpx;
  margin-top: 10rpx;
}
.home .text {
  margin: 40rpx 0 0 40rpx;
}
.home .commodity-box {
  width: 100%;
  background-color: white;
  margin-top: 40rpx;
}
.home .commodity-box .commodity {
  display: flex;
  margin-left: 40rpx;
  margin-top: 40rpx;
}
.home .commodity-box .commodity .commodity-img {
  width: 200rpx;
  height: 200rpx;
}
.home .commodity-box .commodity .commodity-img image {
  width: 100%;
  height: 200rpx;
}
.home .commodity-box .commodity .commodity-content {
  flex: 1;
  margin-left: 40rpx;
}
.home .commodity-box .commodity .commodity-content .explain {
  height: 90rpx;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.home .commodity-box .commodity .commodity-content .region {
  height: 25%;
  font-size: 24rpx;
  color: silver;
}
.home .commodity-box .commodity .commodity-content .price-cart {
  height: 25%;
  display: flex;
}
.home .commodity-box .commodity .commodity-content .price-cart .price {
  line-height: 50rpx;
  color: red;
}
.home .commodity-box .commodity .commodity-content .price-cart .Cart-box {
  margin-left: auto;
}
.home .commodity-box .commodity .commodity-content .price-cart .Cart-box image {
  width: 50rpx;
  height: 50rpx;
}
