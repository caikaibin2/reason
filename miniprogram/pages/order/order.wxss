.order .cart-box {
  width: 96vw;
  margin: 0 auto;
}
.order .cart-box .address-box {
  width: 80%;
  margin: 0 auto;
  margin-top: 20rpx;
  height: 250rpx;
  background-color: #d9dde0;
  padding: 28rpx;
  border-radius: 20rpx;
}
.order .cart-box .address-box .text {
  font-size: 38rpx;
}
.order .cart-box .address-box .addressInfo {
  height: 180rpx;
  width: 100%;
  margin-top: 40rpx;
}
.order .cart-box .address-box .addressInfo .name-phone {
  display: flex;
}
.order .cart-box .address-box .addressInfo .name-phone .name {
  color: #ff7e3d;
}
.order .cart-box .address-box .addressInfo .name-phone .phone {
  margin-left: 40rpx;
  color: #828282;
}
.order .cart-box .address-box .addressInfo .address {
  color: #828282;
  margin-top: 40rpx;
}
.order .cart-box .commodity-box {
  width: 100%;
  background-color: white;
  margin-top: 40rpx;
  padding-bottom: 100rpx;
}
.order .cart-box .commodity-box .commodity {
  display: flex;
  margin-left: 40rpx;
  margin-top: 40rpx;
}
.order .cart-box .commodity-box .commodity .commodity-img {
  width: 200rpx;
  height: 200rpx;
}
.order .cart-box .commodity-box .commodity .commodity-img image {
  width: 100%;
  height: 200rpx;
}
.order .cart-box .commodity-box .commodity .commodity-content {
  flex: 1;
  margin-left: 40rpx;
}
.order .cart-box .commodity-box .commodity .commodity-content .explain {
  height: 80rpx;
  font-size: 28rpx;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.order .cart-box .commodity-box .commodity .commodity-content .price-cart {
  height: 25%;
  display: flex;
  margin-top: 30rpx;
  position: relative;
}
.order .cart-box .commodity-box .commodity .commodity-content .price-cart .price {
  line-height: 50rpx;
  color: red;
}
.order .cart-box .commodity-box .commodity .commodity-content .price-cart .Cart-box {
  margin-left: auto;
  margin-right: 40rpx;
  color: silver;
}
.order .cart-box .commodity-box .commodity .commodity-content .small {
  font-size: 24rpx;
  margin-left: auto;
  color: silver;
}
.order .cart-box .totalprice-box {
  width: 100%;
  height: 100rpx;
  background-color: white;
  display: flex;
  position: fixed;
  left: 0;
  bottom: 0;
}
.order .cart-box .totalprice-box .totalprice {
  width: 240rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  margin-left: 20rpx;
}
.order .cart-box .totalprice-box .totalprice text {
  color: red;
}
.order .cart-box .totalprice-box .downorder {
  margin-left: auto;
  width: 160rpx;
  height: 60rpx;
  background-color: #ff7e3d;
  text-align: center;
  line-height: 60rpx;
  margin-top: 20rpx;
  margin-right: 40rpx;
  color: white;
}
.order .page-container .text {
  margin-top: 40rpx;
  margin-left: 140rpx;
  color: silver;
}
.order .page-container .address-content-box {
  height: 600rpx;
  overflow: auto;
}
.order .page-container .address-content-box .address-content {
  width: 90%;
  margin: 0 auto;
  margin-top: 40rpx;
  height: 120rpx;
  line-height: 60rpx;
  display: flex;
}
.order .page-container .address-content-box .address-content .content {
  flex: 5;
}
.order .page-container .address-content-box .address-content .content .name-phone {
  display: flex;
}
.order .page-container .address-content-box .address-content .content .name-phone .phone {
  margin-left: 20rpx;
}
.order .page-container .address-content-box .address-content .content .address {
  font-size: 26rpx;
  color: silver;
}
.order .page-container .address-content-box .address-content .content .default {
  width: 48rpx;
  font-size: 24rpx;
  height: 24rpx;
  line-height: 24rpx;
  color: white;
  background-color: red;
  padding: 6rpx;
  border-radius: 12rpx;
  margin-top: 14rpx;
  margin-left: 14rpx;
}
.order .page-container .address-content-box .address-content .cginfo-img {
  flex: 1;
  margin-left: auto;
  text-align: center;
}
.order .page-container .address-content-box .address-content .cginfo-img image {
  width: 64rpx;
  height: 64rpx;
  margin-top: 28rpx;
}
.order .page-container .determine {
  width: 40%;
  height: 60rpx;
  position: fixed;
  bottom: 20rpx;
  left: 400rpx;
  background-color: red;
  color: white;
  line-height: 60rpx;
  text-align: center;
  border-radius: 40rpx;
}
.order .page-container .addAddress {
  width: 40%;
  height: 60rpx;
  position: fixed;
  bottom: 20rpx;
  left: 75rpx;
  background-color: red;
  color: white;
  line-height: 60rpx;
  text-align: center;
  border-radius: 40rpx;
}
